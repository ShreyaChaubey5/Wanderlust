<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-8 offset-2">
      <h3>Edit your listings</h3>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-labels" novalidate class="needs-validation">title</label>
          <input
            name="listing[title]"
            placeholder="Add a eye catchy title"
            type="text"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="description" class="form-labels">description</label>
          <textarea
            name="listing[description]"
            placeholder="enter description"
            class="form-control"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          Original Listing Image<br>
          <img src="<%= listing.image.url %>">
        </div>
        <div class="mb-3">
          <label for="image" class="form-labels">Upload new image</label>
          <input
            name="listing[image]"
            type="file"
            class="form-control"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-labels">price</label>
            <input
              name="listing[price]"
              placeholder="1200"
              type="number"
              class="form-control"
              required
            />
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-labels">country</label>
            <input
              name="listing[country]"
              placeholder="India"
              class="form-control"
              required
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-labels">location</label>
          <input
            name="listing[location]"
            placeholder="Jaipur,Rajasthan"
            class="form-control"
            required
          />
        </div>
        <button class="btn btn-dark edit-btn ">Edit the list</button>
      </form>
  </div>
</div>
